{
  "name": "tableau-wdc-dynamic",
  "description": "Dynamic Report WDC with TypeScript and custom build scripts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "node scripts/clean.js",
    "dev": "node scripts/dev.js",
    "test": "node scripts/test.js",
    "package": "node scripts/package.js",
    "sign": "node scripts/sign.js",
    "build:wdc": "npm run clean && npm run build && npm run package"
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.2.0",
    "archiver": "^7.0.1",
    "chokidar": "^3.5.3",
    "http-server": "^14.1.1",
    "jsdom": "^24.0.0"
  },
  "targets": {
    "handlers": {
      "includeNodeModules": false,
      "sourceMap": false,
      "context": "web-worker",
      "distDir": "dist/handlers",
      "outputFormat": "commonjs",
      "isLibrary": false,
      "optimize": true
    },
    "app": {
      "publicUrl": "./",
      "distDir": "dist/app",
      "engines": {
        "browsers": "Chrome 70"
      }
    }
  },
  "alias": {
    "process": false,
    "path": false,
    "util": false
  }
}